@model API.Areas.Admin.Models.Articles.ArticlesModel

<div class="other-list">
    <h2 class="_title">Related articles</h2>
    <ul class="menu">
        @if (Model.ListItems == null || Model.ListItems.Count() == 0)
        {
        <li>No post!</li>
        }
        else
        {
            for (int i = 0; i < Model.ListItems.Count(); i++)
            {
                <li><a href="/EN/@(Model.ListItems[i].Alias)-@(Model.ListItems[i].Id).html">@(Model.ListItems[i].Ten)</a></li>
            }
        }
    </ul>
</div>



