@model API.Areas.Admin.Models.DocumentsLaw.DocumentsLawModel
@{
    if (Model.Item.Id == 0)
    {
        ViewData["Title"] = "Thêm mới tài liệu";
    }
    else
    {
        ViewData["Title"] = "Cập nhật tài liệu";
    }
    string ControllerName = this.ViewContext.RouteData.Values["controller"].ToString();
}

<div class="card">
    <div class="card-header">
        <h4>Chi tiết tài liệu</h4>
    </div>
    <div class="card-body">
        <partial name="_PartialMsgInfoAdmin" />
        <div asp-validation-summary="All" class="text-danger"></div>
        <form asp-controller="@ControllerName" asp-action="SaveItem" method="post">
            <div class="row">
                <div class="col-lg-4">
                    <div class="form-group">
                        <label asp-for="Item.Title">Tiêu đề Văn bản <sup class="text-danger"> (*)</sup></label>
                        <input type="text" class="form-control Changetitle namepr" asp-for="Item.Title" name="Title">
                    </div>
                </div>
                <div class="col-lg-4" style="display:none">
                    <div class="form-group">
                        <label asp-for="Item.Year">Năm<sup class="text-danger"> (*)</sup></label>
                        <input type="text" class="form-control" asp-for="Item.Year" name="Year">
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label asp-for="Item.Alias">Alias<sup class="text-danger"> (*)</sup></label>
                        <input type="text" class="form-control slug" asp-for="Item.Alias" name="Alias">
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="form-group">
                        <label asp-for="Item.IssuedDateShow">Ngày Ban Hành <sup class="text-danger"> (*)</sup></label>
                        <div class="input-group date" id="IssuedDateShow" data-target-input="nearest">
                            <input type="text" asp-for="Item.IssuedDateShow" name="IssuedDateShow" class="form-control datetimepicker-input" data-target="#IssuedDateShow" />
                            <div class="input-group-append" data-target="#IssuedDateShow" data-toggle="datetimepicker">
                                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">


                <div class="col-lg-4">
                    <div class="form-group">
                        <label asp-for="Item.TypeId">Loại văn bản </label>
                        <select asp-for="Item.TypeId" name="TypeId" class="form-control" asp-items="Model.ListDocumentsType"></select>
                    </div>
                </div>

                <div class="col-lg-4" style="display:none">
                    <div class="form-group">
                        <label asp-for="Item.FieldName">Lĩnh vực</label>
                        <input type="text" class="form-control" asp-for="Item.FieldName" name="FieldName">
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="form-group">
                        <label asp-for="Item.Status"> &nbsp; &ensp; &ensp;</label>
                        <div class="custom-control custom-checkbox custom-control">
                            <input asp-for="Item.Status" name="Status" class="custom-control-input" />
                            <label class="custom-control-label" asp-for="Item.Status">Trạng Thái</label>
                        </div>
                    </div>
                </div>
            </div>
        



            <div class="form-group">
                <label asp-for="Item.Introtext">Trích Yếu</label>
                <textarea asp-for="Item.Introtext" name="Introtext" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="Item.FullText">Ghi chú</label>
                <textarea asp-for="Item.FullText" name="FullText" class="form-control"></textarea>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <fieldset class="scheduler-border">
                        <legend class="scheduler-border">File Đính kèm</legend>
                        <div class="file-list">

                            @if (Model.Item.ListFile != null && Model.Item.ListFile.Count() > 0)
                            {
                                <input type="hidden" id="maxfile" value="@(Model.Item.ListFile.Count()-1)">
                                for (int j = 0; j < Model.Item.ListFile.Count(); j++)
                                {
                                    <div class="file-item">
                                        <input type="hidden" asp-for="@Model.Item.ListFile[j].FilePath" name="ListFile[@j].FilePath" class="FileName" id="FileName_@j">
                                        <a href="javascript:openCustomRoxy2(@j)" type="button" class="btn btn-primary">Chọn File</a>
                                        <span class="lblFileName" id="lblFileName_@j">
                                            <a href="@Model.Item.ListFile[j].FilePath" target="_blank">@Model.Item.ListFile[j].FilePath</a>
                                        </span>


                                        <span class="text-danger xoafile">Xóa</span>
                                    </div>
                                }
                            }
                            else
                            {
                                <input type="hidden" id="maxfile" value="-1">
                            }
                        </div>
                        <p style="margin:10px 5px; cursor:pointer" class="text-primary" onclick="ThemFile()">
                            <i class="fa fa-plus-square"></i> Thêm file
                        </p>
                    </fieldset>
                </div>
            </div>

            <input type="submit" class="btn btn-primary" name="SaveItem" value="Lưu" />
            <a class="btn btn-danger" asp-controller="@ControllerName" asp-action="Index">Hủy</a>
            <input type="hidden" class="form-control" asp-for="Item.Id" name="Id">
            <input type="hidden" class="form-control" asp-for="Item.Ids" name="Ids">

        </form>
    </div>
</div>

<div id="roxyCustomPanel2" class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content content-set-image">
            <iframe id="ifrm2" src="" style="width:100%;height:100%" frameborder="0"></iframe>
        </div>
    </div>
</div>


<script src="~/js/moment.js"></script>
<script src="~/js/tempusdominus-bootstrap-4.min.js"></script>
<script type="text/javascript" src="~/js/jquery.base64.min.js"></script>
<script type="text/javascript" src="~/js/jquery.binarytransport.js"></script>


<script type="text/javascript">

    $(function () {

        $('#IssuedDateShow').datetimepicker({ format: 'DD/MM/YYYY', });
        $('#EffectiveDateShow').datetimepicker({ format: 'DD/MM/YYYY', });
    });



    // File đính kèm

    function openCustomRoxy2(id) {
        var roxyFileman2 = '/lib/fileman/index.html?integration=custom_2&langCode=vi&txtFieldId=' + id;
        $('#ifrm2').attr('src', roxyFileman2)
        $('#roxyCustomPanel2').modal('show');
    }
    function closeCustomRoxy2() {
        $('#roxyCustomPanel2').modal('hide');
    }

    function ThemFile() {
        var max = parseInt($("#maxfile").val()) + 1;
        /**/
        $(".file-list").append('<div class="file-item"><input type="hidden" name="ListFile[' + max + '].FilePath" class="FileName" id="FileName_' + max + '"><a href="javascript:openCustomRoxy2(' + max + ')" type="button" class="btn btn-primary">Chọn File</a><span class="lblFileName" id="lblFileName_' + max + '"></span>  <span class="text-danger xoafile">Xóa</span></div>');
        /**/
        $("#maxfile").val(max);
    }

    $('.file-list').on('click', '.file-item .xoafile', function (event) {

        $(this).parent().find(".lblFileName").empty();
        $(this).parent().find(".FileName").val("");
    })
</script>
