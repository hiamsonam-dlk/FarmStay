@model API.Areas.Admin.Models.DuThaoVanBanGopY.DuThaoVanBanGopYModel
@{
    if (Model.Item.Id == 0)
    {
        ViewData["Title"] = "Chi tiết góp ý dự thảo";
    }
    else
    {
        ViewData["Title"] = "Chi tiết góp ý dự thảo";
    }
    string ControllerName = this.ViewContext.RouteData.Values["controller"].ToString();
}

<div class="card">
    <div class="card-header">
        <h4>@ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        <div asp-validation-summary="All" class="text-danger"></div>
        <form asp-controller="@ControllerName" asp-action="SaveItem" method="post">
            <div class="row">
                <div class="col-12 col-md-4">
                    <div class="form-group">
                        <label asp-for="Item.Fullname">Họ Tên <sup class="text-danger"> (*)</sup></label>
                        <input type="text" class="form-control" asp-for="Item.Fullname" name="Fullname">
                    </div>
                </div>
                <div class="col-12 col-md-4">
                    <div class="form-group">
                        <label asp-for="Item.Phone">Điện Thoại</label>
                        <input type="text" class="form-control" asp-for="Item.Phone" name="Phone">
                    </div>
                </div>
                <div class="col-12 col-md-4">
                    <div class="form-group">
                        <label asp-for="Item.Email">Email</label>
                        <input type="text" class="form-control" asp-for="Item.Email" name="Email">
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12 col-md-4">
                    <div class="form-group">
                        <label asp-for="Item.Address">Địa Chỉ</label>
                        <input type="text" class="form-control" asp-for="Item.Address" name="Address">
                    </div>
                </div>
                <div class="col-12 col-md-4">
                    <div class="form-group">
                        <label asp-for="Item.CreatedDate">Ngày Gửi</label>
                        <input disabled type="text" class="form-control" asp-for="Item.CreatedDate" name="CreatedDate">
                    </div>
                </div>
                <div class="col-12 col-md-4">
                    <div class="form-group">
                        <div>
                            <label asp-for="Item.CreatedDate">Trạng thái</label>
                        </div>
                        <div class="custom-control custom-checkbox custom-control-inline">
                            <input asp-for="Item.Status" name="Status" class="custom-control-input" />
                            <label class="custom-control-label" asp-for="Item.Status">Hiển thị</label>
                        </div>
                    </div>
                </div>

            </div>

            <div class="form-group">
                <label asp-for="Item.Title">Tiêu đề <sup class="text-danger"> (*)</sup></label>
                <input type="text" class="form-control" asp-for="Item.Title" name="Title">
            </div>

            <div class="form-group">
                <label asp-for="Item.Description">Góp ý</label>
                <textarea asp-for="Item.Description" name="Description" class="form-control" style="height:200px"></textarea>
            </div>

            

            <div class="row">
                <div class="col-lg-12">
                    <button type="submit" class="btn btn-primary" name="SaveItem" value="Lưu">
                        <i class="fas fa-save"></i> Lưu lại
                    </button>
                </div>
            </div>

            <input type="hidden" class="form-control" asp-for="Item.Id" name="Id">
            <input type="hidden" class="form-control" asp-for="Item.Ids" name="Ids">
            <input type="hidden" class="form-control" asp-for="Item.IdDuThao" name="IdDuThao">

        </form>
    </div>
</div>


