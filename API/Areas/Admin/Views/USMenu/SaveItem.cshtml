@model API.Areas.Admin.Models.USMenu.USMenuModel
@{
    ViewData["Title"] = "Module detail";
    string ControllerName = this.ViewContext.RouteData.Values["controller"].ToString();
}

<div class="card">
    <div class="card-header">
        <h4>Module detail</h4>
    </div>
    <div class="card-body">
        <div asp-validation-summary="All" class="text-danger"></div>
        <form asp-controller="@ControllerName" asp-action="SaveItem" method="post">
            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Item.Title">Name <sup class="text-danger"> (*)</sup></label>
                        <input type="text" class="form-control" asp-for="Item.Title" name="Title">
                    </div>
                </div>



                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Item.PathName">Path <sup class="text-danger"> (*)</sup></label>
                        <input type="text" class="form-control" asp-for="Item.PathName" name="PathName">
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Item.Controller">Controller <sup class="text-danger"> (*)</sup></label>
                        <input type="text" class="form-control" asp-for="Item.Controller" name="Controller">
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Item.IdParent">Parent</label>
                        <select asp-for="Item.IdParent" class="form-control" name="IdParent" asp-items="Model.ListItemsMenus"></select>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Item.Styles">Styles </label>
                        <input type="text" class="form-control" asp-for="Item.Styles" name="Styles">
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Item.SortOrder">SortOrder <sup class="text-danger"> (*)</sup></label>
                        <input type="text" class="form-control" asp-for="Item.SortOrder" name="SortOrder">
                    </div>
                </div>
            </div>
                        
            <div class="form-group">
                <div class="custom-control custom-checkbox custom-control-inline">
                    <input asp-for="Item.Status" name="Status" class="custom-control-input" />
                    <label class="custom-control-label" asp-for="Item.Status"></label>
                </div>

                <div class="custom-control custom-checkbox custom-control-inline">
                    <input asp-for="Item.onMenu" name="onMenu" class="custom-control-input" />
                    <label class="custom-control-label" asp-for="Item.onMenu"></label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Item.Description">Description</label>
                <textarea asp-for="Item.Description" name="Description" class="form-control"></textarea>
            </div>

            <input type="submit" class="btn btn-primary" name="SaveItem" value="Save" />
            <a class="btn btn-info" asp-controller="@ControllerName" asp-action="Index">Back</a>
            <input type="hidden" class="form-control" asp-for="Item.Id" name="Id">
            <input type="hidden" class="form-control" asp-for="Item.Ids" name="Ids">

        </form>
    </div>
</div>

