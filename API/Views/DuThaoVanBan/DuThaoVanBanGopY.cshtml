@{
    ViewData["Title"] = "Góp ý dự thảo văn bản";
    string ControllerName = this.ViewContext.RouteData.Values["controller"].ToString();
    var ItemConfig = API.Areas.Admin.Models.SYSParams.SYSParamsService.GetItemConfigByHome();
}



<div class="navigation nlist">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <ul class="list-inline  ">
                    <li>
                        <a href="/">Trang chủ</a> <i class="fa fa-angle-right"></i>
                        <a asp-controller="DuThaoVanBan" asp-action="Index">Dự thảo Văn bản</a> <i class="fa fa-angle-right"></i>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="container ContentDiv">
    <div class="row">
        <div class="col-lg-3 col-md-3 col-12">
            <div class="card mb-4">
                <img class="card-img-top" src="/images/hoidap.jpg" alt="Hỏi Đáp">
                <div class="card-body">
                    <h5 class="card-title"><strong>@ViewData["Title"]</strong> </h5>
                    <p class="card-text small-f1">Lấy ý kiến nhân dân về Dự thảo văn bản quy phạm pháp luật.</p>
                </div>
            </div>
        </div>

        <div class="col-lg-9 col-md-9 col-12">
            <section id="contact" class="contact p-0">

                <div class="row">
                    <div class="col-12">

                        <div class="alert alert-primary draft_justify">
                            <p><strong>Thông tin góp ý văn bản:</strong> </p>
                            <p>  @Model.vb.Title</p>

                        </div>
                    </div>
                </div>

                <div asp-validation-summary="All" class="myValidation"></div>
                <partial name="_PartialMsgInfo" />
                <form asp-controller="@ControllerName" asp-action="DuThaoVanBanGopY" method="post">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label asp-for="Item.Fullname">Họ Tên <sup class="text-danger"> (*)</sup></label>
                                <input type="text" class="form-control" asp-for="Item.Fullname" name="Fullname">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label asp-for="Item.Phone">Điện Thoại </label>
                                <input type="tel" pattern="[0-9]{10}" class="form-control" asp-for="Item.Phone" name="Phone">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label asp-for="Item.Address">Địa Chỉ</label>
                                <input type="text" class="form-control" asp-for="Item.Address" name="Address">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label asp-for="Item.Email">Email</label>
                                <input type="email" class="form-control" asp-for="Item.Email" name="Email">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label asp-for="Item.Title">Tiêu đề <sup class="text-danger"> (*)</sup></label>
                                <input type="text" asp-for="Item.Title" name="Title" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Item.Introtext">Nội dung góp ý <sup class="text-danger"> (*)</sup></label>
                                <textarea asp-for="Item.Introtext" name="Introtext" class="form-control"></textarea>
                            </div>


                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-8 col-12">
                            <div class="form-group">
                                @Html.Recaptcha(RecaptchaSettings?.Value)
                            </div>
                        </div>
                        <div class="col-lg-4 col-12 text-right">
                            <input type="submit" class="btn btn-primary" name="SaveItem" value="Gửi thông tin" />
                            <a class="btn btn-danger" asp-controller="Home" asp-action="Index">Thoát</a>
                        </div>
                    </div>
                    <input type="hidden" class="form-control" asp-for="Item.Id" name="Id">
                    <input type="hidden" class="form-control" asp-for="Item.Ids" name="Ids">
                    <input type="hidden" class="form-control" asp-for="Item.IdDuThao" name="IdDuThao">
                    <input type="hidden" class="form-control" asp-for="Item.IdsDuThao" name="IdsDuThao">
                    <input type="hidden" class="form-control" asp-for="Item.Token" name="Token">

                </form>
