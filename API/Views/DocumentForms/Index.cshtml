@model API.Areas.Admin.Models.DocumentForms.DocumentFormsModel
@{

    ViewData["Title"] = "Tạp chí ChưYangSin";
    string ControllerName = this.ViewContext.RouteData.Values["controller"].ToString();

}

<div class="navigation nlist">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <ul class="list-inline  ">
                    <li>
                        <a href="/">Trang chủ</a> <i class="fa fa-angle-right"></i>
                        <a href="#">@ViewData["Title"]</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="container ContentDiv">
    <div class="row">

        <div class="col-lg-9 col-md-12">
            <div class="PageDetail">
                <div class="row ListBTTP">
                    @foreach (var item in Model.ListItems)
                    {
                        <div class="col-lg-3 col-sm-6 col-xs-12">
                            <div class="item">
                                <a asp-controller="DocumentForms" asp-action="Detail" asp-route-id="@item.Id" asp-route-alias="@item.Alias">
                                    @if (!string.IsNullOrEmpty(item.Images))
                                    {
                                        <img src="@item.Images" title="@item.Title" />
                                    }
                           

                                </a>
                                <a asp-controller="DocumentForms" asp-action="Detail" asp-route-id="@item.Id" asp-route-alias="@item.Alias" class="title">
                                    @item.Title
                                </a>
                            </div>
                        </div>
                    }
                </div>

            </div>

            <div class="row">
                <div class="col-md-12">
                    @await Html.PartialAsync("_PartialPagination", Model.Pagination)
                </div>

            </div>
        </div>
        <div class="col-lg-3 col-md-12">
            <div class="greyDiv searchDiv mb-3">
                <form asp-controller="@ControllerName" asp-action="Index" method="GET">
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <label asp-for="SearchData.Keyword">Từ khóa</label>
                                <input type="text" class="form-control" asp-for="SearchData.Keyword" name="Keyword">
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-group">
                                <div>
                                    <input type="submit" class="btn btn-primary" name="Search" value="Tìm kiếm" />
                                </div>

                            </div>

                        </div>
                    </div>

                </form>
            </div>

            <div>
                <ul class="listYear">
                    <li>
                        <a asp-controller="DocumentForms" asp-action="Index"><i class="fas fa-book mr-1"></i>Xem tất cả</a>
                    </li>
                    @for (int i = DateTime.Now.Year; i >= 2010; i--)
                    {
                        <li> 
                            <a asp-controller="DocumentForms" asp-action="Index" asp-route-year="@i" class="@(Model.SearchData.Year==i?"active":"")"> <i class="fas fa-book mr-1"></i> Năm @i</a>
                        </li>

                    }
                </ul>
            </div>

        </div>
    </div>
</div>


