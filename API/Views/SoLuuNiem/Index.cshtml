@model API.Areas.Admin.Models.Booking.BookingModel;
@using Microsoft.AspNetCore.Http
@using System.Web

<div class="hero-wrap" style="height: 75vh">
    <div class="container full-height">
        <div class="row no-gutters slider-text justify-content-center align-items-center" style="height: 75vh">
            <div class="col-12 d-flex justify-content-center" data-aos="fade-up">
                <div class="text navigation nlist">
                    <h2 class="text-center text-white">Danh sách cảm nghĩ.</h2>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container pt-3">
    @if (Model.ListItems == null || Model.ListItems.Count() == 0)
    {
        <div class="col-lg-12">
            <h4>Chưa có dữ liệu</h4>
        </div>

    }
    @for(int i = 0; i < Model.ListItems.Count(); i++)
    {
        <div class="row mb-3">
            <div class="col-12 col-lg-9 mx-auto">
                <div class="each-comment text-justify float-left w-100">
                    <div class="user-info d-flex align-items-end">
                        <img src="/TMDT/images/icon-user.png" alt="" class="user-avatar">
                        <div class="mx-2">
                            <p class="user-name">@Model.ListItems[i].TenKhachHang</p>
                            <p class="user-comment-at">At @Model.ListItems[i].CreatedAt.ToString("HH:mm, dd/MM/yyyy")</p>
                        </div>
                    </div>
                    <hr/>
                    <div class="row">
                        @if (Model.ListItems[i].ListHinhAnh != null && Model.ListItems[i].ListHinhAnh.Count() > 0)
                        {
                            for (int j = 0; j < Model.ListItems[i].ListHinhAnh.Count(); j++)
                                {
                                    <div class="col-md-3">
                                        @*<img src="@Model.ListItems[i].ListHinhAnh[j].URL">*@
                                        <a data-fancybox="gallery_@Model.ListItems[i].Id" href="@Model.ListItems[i].ListHinhAnh[j].URL" data-caption="Đài tưởng niệm Giao Bưu - thông tin liên lạc Tây Nguyên">
                                        <img loading="lazy" class="card-img-top" src="/Home/ResizeImage?url=@Model.ListItems[i].ListHinhAnh[j].URL&width=255&height=150" alt="Đài tưởng niệm Giao Bưu - thông tin liên lạc Tây Nguyên">
                                        </a>

                                    </div>
                                }
                            
                        }
                    </div>
                    <p class="comment-content py-1">@Model.ListItems[i].CamNghi</p>
                    <p class="user-position d-flex justify-content-end">@Model.ListItems[i].TenKhachHang - @(Model.ListItems[i].DonViCongTac).</p>
                </div>
            </div>
        </div>
    }

    <div class="row">
        <div class="col-md-12 mb-3 d-flex justify-content-center">
            @await Html.PartialAsync("_PartialPagination", Model.Pagination)
        </div>

    </div>
</div>